#!/usr/bin/make -f

export PYBUILD_NAME=heikodiscopi

%:
	dh $@ --with python3

override_dh_auto_build:
	python3 -m build --wheel --no-isolation

override_dh_auto_install:
	python3 -m installer --destdir=debian/heikodiscopi --prefix=/usr dist/*.whl
	if [ -d debian/heikodiscopi/usr/local ]; then \
		mkdir -p debian/heikodiscopi/usr; \
		cp -a debian/heikodiscopi/usr/local/* debian/heikodiscopi/usr/; \
		rm -rf debian/heikodiscopi/usr/local; \
	fi
